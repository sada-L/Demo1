<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo.ClientForm"
		x:CompileBindings="False"
        Title="ClientForm">
	<Grid ColumnDefinitions="*,*" DataContext="{Binding CurrentClient}" Margin="10" Name="MainGrid">
		<StackPanel Grid.Row="0" Spacing="10">
			<TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" Name="IdBlock"/>
			<TextBox Watermark="Фамилия" Text="{Binding Firstname}"/>
			<TextBox Watermark="Имя" Text="{Binding Lastname}"/>
			<TextBox Watermark="Отчество" Text="{Binding Patronymic}"/>
			<TextBox Watermark="Почта" Text="{Binding Email}"/>
			<TextBox Watermark="Телефон" Text="{Binding Phone}"/>
			
			<ToggleSwitch Name="GenderToggle">
				<ToggleSwitch.OffContent>
					Муж
				</ToggleSwitch.OffContent>
				<ToggleSwitch.OnContent>
					Жен
				</ToggleSwitch.OnContent>
			</ToggleSwitch>
		</StackPanel>
		
		<Calendar Grid.Column="1" 
				  HorizontalAlignment="Right" 
				  VerticalAlignment="Top"
				  Name="DateCalendar"/>
	</Grid>
</Window>
